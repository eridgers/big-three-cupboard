extends ../layout.pug

block content
  h1.ui.header #{title} #{item.name}
  p Really delete this item?
    form(id="delete-form" action=item.url+"/delete" method="POST")
      button.ui.button.red(type="submit") Yes begone with it.
      a.ui.button.green(href="/items") Never mind

  .ui.card
    .image
      img(src=item.image, alt="#{item.name}")
    .content
      .header #{item.name}
      .meta
        span #{item.brand.name}
        a.right.floated(href=item.url) View Item
      .description #{item.description}
    .extra.content
      span.right.floated #{item.weight} grams
      span $#{item.cost}
      p ($#{item.costByGram} per gram)

